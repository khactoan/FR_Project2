<div class="portlet light portlet-fit bordered">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-bubble font-dark"></i>
      <span class="caption-subject font-dark bold uppercase">
        <%= t "Users" %>
      </span>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-scrollable">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th> # </th>
            <th> <%= t ".Id" %> </th>
            <th> <%= t ".Name" %> </th>
            <th> <%= t ".Email" %> </th>
            <th> <%= t ".Date of_birth" %> </th>
            <th colspan="2"> <%= t "Action" %> </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each_with_index do |user, index| %>
            <tr>
              <td> <%= index + 1 %> </td>
              <td> <%= user.id %> </td>
              <td>
                <%= user.name %>
                <% if user.is_admin %>
                  (<b><%= t "Admin" %></b>)
                <% end %>
              </td>
              <td> <%= user.email %> </td>
              <td>
                <% if !user.date_of_birth.nil? %>
                  <%= user.date_of_birth.strftime "%d-%m-%Y" %>
                <% end %>
              </td>
              <td> <%= link_to t("Show"), admin_user_path(user.id) %> </td>
              <% if current_user != user %>
                <td>
                  <%= link_to t("Destroy"), user_path(user.id), method: :delete %>
                </td><% else %><td></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= will_paginate @users %>
