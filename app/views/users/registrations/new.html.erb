<div class="col-md-8 col-md-offset-2">
  <h2 class="center-title"><%= t "Sign up" %></h2>
  <%= form_for resource, as: resource_name,
    url: registration_path(resource_name) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :name, class: "col-md-5" %>
      <%= f.text_field :name, autofocus: true, class: "col-md-7" %>
    </div>

    <br><br>

    <div class="form-group">
      <%= f.label :email, t("Email *") , class: "col-md-5" %>
      <%= f.email_field :email, autofocus: true, class: "col-md-7" %>
    </div>

    <br><br>

    <div class="form-group">
      <%= f.label :password, t("Password *"), class: "col-md-5" %>
      <%= f.password_field :password, autocomplete: "off", class: "col-md-7" %>
    </div>

    <br><br>

    <div class="form-group">
      <%= f.label :password_confirmation, t("Password confirmation *"), class: "col-md-5" %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        class: "col-md-7" %>
    </div>

    <br><br>

    <div class="form-group">
      <%= f.label :date_of_birth, class: "col-md-5" %>
      <%= f.date_select :date_of_birth, class: "col-md-7" %>
    </div>

    <div class="field">
      <%= f.label :avatar, class: "col-md-5" %>
      <%= f.file_field :avatar, class: "col-md-7" %>
    </div>

    <br><br>

    <div class="actions center-title">
      <%= f.submit t "Sign up" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
