<div class="col-md-6 col-md-offset-3">

<h2><% t "Log in" %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "col-md-5" %>
      <%= f.email_field :email, autofocus: true, class: "col-md-7" %>
    </div>
    <br><br>
    <div class="field">
      <%= f.label :password, class: "col-md-5" %>
      <%= f.password_field :password, autocomplete: "off", class: "col-md-7" %>
    </div>
    <br><br>
    <% if devise_mapping.rememberable? -%>
      <div class="field col-md-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit t "Log in" %>
    </div>
  <% end %>
  <div class="col-md-7">
    <%= render "users/shared/links" %>
  </div>
</div>
