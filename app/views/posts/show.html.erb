<h1><%= @post.title %></h1>
<p class="meta" style="color: blue"><%= @post.description %></p>
<p class="meta" style="color: blue">Posted by
  <%= link_to @post.user.name, user_path(@post.user) %>
  on <%= @post.created_at %>
</p>

<article>
  <div class="row">
    <div class="col-md-10">
      <%= raw @post.content %>
    </div>
  </div>
</article>

<%= t "Tags" %>: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(", ") %>

<%= social_share_button_tag @post.title %>

<%= render "comments/comment", :locals => {post: @post, comments: @comments,
  comment: @comment} %>
<div class="edit-back-link">
  <% if current_user == @post.user %>
    <%= link_to t("Edit"), edit_post_path(@post), class: "btn btn-primary" %>
    <%= link_to t("Destroy"), post_path(@post), class: "btn btn-danger", method: :delete,
      data: {confirm: t("Are you sure?")} %>
  <% end %>
  <%= link_to t("Back"), posts_path, class: "btn btn-success" %>
</div>
